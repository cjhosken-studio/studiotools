{
  "name": "studiotools",
  "version": "1.0.0",
  "author": "Christoper Hosken",
  "description": "A tool for managing and automating tasks in a studio environment.",
  "main": "frontend/dist-electron/main.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && python3 main.py",
    "build": "npm run build:frontend && npm run build:backend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && pyinstaller --onefile --windowed main.py"
  },
  "build": {
    "appId": "com.example.studiotools",
    "productName": "StudioTools",
    "files": [
      "frontend/dist/**/*",
      "frontend/dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": "zip",
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "backend/dist/main.exe",
          "to": "backend/main.exe"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "VFX",
      "icon": "assets/icon512x512.png",
      "extraResources": [
        {
          "from": "backend/dist/main",
          "to": "backend/main"
        }
      ]
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  }
}
